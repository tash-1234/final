<!DOCTYPE html>
<html lang="en">
<%- include("partials/_header.ejs")-%>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_horizontal-navbar.html -->
      <%- include("partials/_horizontal-navbar.ejs") -%>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
          <div class="content-wrapper pb-0">
            
            <div class="row justify-content-center">
              <div class="col-lg-10">
                <div class="card" >

                    <div class="card-header ">
                        
                        <div class="header-right d-flex flex-wrap mt-md-2 mt-lg-0">
                          <div class="d-flex align-items-center">
                            <a href="#">
                              <p class="m-0 pe-3">Dashboard</p>
                            </a>
                            <a class="ps-3 me-4" href="#">
                              <p class="m-0">ADE-00234</p>
                            </a>
                          </div>
                          <a href="add_payment" type="button" class="btn btn-primary mt-2 mt-sm-0 btn-icon-text">
                            <i class="mdi mdi-plus-circle"></i> Add Payments </a>
                        </div>
                      </div>

                  <div class="card-body overflow-auto" style="min-height:60vh;max-height:75vh;"">

                    <div class="row">
                    <% if(payments){ %>

                        <div class="col-lg-12">
                            <table class="table table-striped table-border">

                                <thead>
                                    <tr>
                                        <th>Property Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Days</th>
                                        <th>Amount(UGX)</th>
                                    </tr>
                                </thead>

                                <% for(var i=0;i<payments.length;i++){ %>


                                    <tr>
                                          <td>
                                            <%=payments[i].property_name  %>
                                           </td> 
                                       <td>
                                        <%=payments[i].start_date  %>
                                       </td> 

                                       <td>
                                         <%=payments[i].end_date%>
                                       </td> 

                                       <td>
                                        <%=payments[i].days%>
                                      </td> 

                                       <td>
                                         <%=payments[i].amount_paid%>
                                       </td> 
                                    </tr>

                                <%}%>

                            </table>
                        </div>
                       
                    <%}%>
                </div>
                 

                  </div>
                </div>
              </div>
            </div>


          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include("partials/_footer.ejs") -%>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <%- include("partials/_scripts.ejs") -%>
  </body>
</html>